<div class="form-group">
  <label for="title">Name of the mentor</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
  <label for="description">Years of Teaching Experience</label>
  <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Bio</label>
  <textarea required name="markdown" id="markdown" class="form-control"><%= article.markdown %></textarea>
</div>

<a href="/articles/community" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn" style="background-color: #F8E16C">Save</button>